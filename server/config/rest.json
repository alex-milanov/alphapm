{
	"collections": {
		"users": {
			"model": "User"
		},
		"tasks": {
			"model": "Task",
			"schema": {
				"name" : {"type": "String", "required": true, "minLength": 1, "maxLength": 70 },
				"story": "String",
				"project": {
					"_id": {"type": "ObjectId", "ref": "Project"},
					"name": "String",
					"users": [{
						"_id": {"type": "ObjectId", "ref": "User"},
						"name": "String",
						"email": "String",
						"role": "String"
					}]
				},
				"time": {
					"ass": "Number",
					"est": "Number"
				},
				"activities": [
					{
						"start": "Number",
						"end": "Number",
						"type": "String"
					}
				],
				"users": [{
					"_id": {"type": "ObjectId", "ref": "User"},
					"name": "String",
					"email": "String",
					"role": "String"
				}],
				"type": "String",
				"status": "String",
				"milestone": "String",
				"createdBy" : {"type": "ObjectId", "ref":"User", "required": false},
				"createdAt": {"type": "Date", "default": "Date.now" }
			}
		},
		"projects": {
			"model": "Project",
			"schema": {
				"name": "String",
				"scope" : "String",
				"client": "String",
				"team": "String",
				"rate": "Number",
				"users": [{
					"_id": {"type": "ObjectId", "ref": "User"},
					"name": "String",
					"email": "String",
					"role": "String"
				}],
				"createdBy" : {"type": "ObjectId", "ref":"User", "required": false},
				"createdAt": {"type": "Date", "default": "Date.now" }
			}
		}
	},
	"routes": {
		"api" : {
			"_meta": {
				"virtual": true,
				"crud": true,
				"contentType": "json"
			},
			"users": {
				"_meta": {
					"access": {
						"admin": "all",
						"user": "list,view",
						"anonymous": "create,list"
					}
				}
			},
			"tasks": {
				"_meta": {
					"assigned": [
						"users",
						"project.users"
					],
					"access": {
						"admin": "all",
						"user": "own,assigned"
					}
				}
			},
			"projects": {
				"_meta": {
					"assigned": "users",
					"access": {
						"admin": "all",
						"user": "own,assigned"
					}
				}
			}
		}
	}
}
